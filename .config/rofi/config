# General
rofi.matching: fuzzy
rofi.font: Ubuntu Mono derivative Powerline 16
rofi.modi: drun
rofi.hide-scrollbar: true
rofi.levenshtein-sort: true
rofi.terminal:                       i3-sensible-terminal

# Keybindings
rofi.kb-row-up:                      Up,Control+k
rofi.kb-row-down:                    Down,Control+j
rofi.kb-accept-entry:                Control+m,Return,KP_Enter
rofi.kb-remove-to-eol:               Control+Shift+e
rofi.kb-mode-next:                   Control+l
rofi.kb-mode-previous:               Control+h
rofi.kb-remove-char-back:            BackSpace
rofi.theme: /usr/share/rofi/themes/arthur.rasi
